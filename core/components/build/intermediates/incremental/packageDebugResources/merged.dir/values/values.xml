<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <attr format="reference" name="filledButton"/>
    <attr format="reference" name="outlineButton"/>
    <attr format="reference" name="textButton"/>
    <color name="black">#000000</color>
    <color name="black_alpha_40">#65000000</color>
    <color name="blue">#006DCF</color>
    <color name="colorAccent">#FFF</color>
    <color name="colorPrimary">#E6373E</color>
    <color name="colorPrimaryDark">#C23435</color>
    <color name="disable">#B5B5B5</color>
    <color name="divider">#DEDEDE</color>
    <color name="error">#F16363</color>
    <color name="green">#3ECD66</color>
    <color name="grey">#E5E5E5</color>
    <color name="orange">#FEBE10</color>
    <color name="red">#F16363</color>
    <color name="textDarkBlue">#00284C</color>
    <color name="textGreen">#3ECD66</color>
    <color name="textHint">#5F5F5F</color>
    <color name="textPrimary">#000000</color>
    <color name="textRed">#F16363</color>
    <color name="textSecondary">#5F5F5F</color>
    <color name="textThirdly">#767676</color>
    <color name="textWhite">#FFFFFF</color>
    <color name="transparent">#00000000</color>
    <color name="white">#FFFFFF</color>
    <color name="windowsBackground">#FFFFFF</color>
    <dimen name="body">14sp</dimen>
    <dimen name="caption">12sp</dimen>
    <dimen name="card_elevation">16dp</dimen>
    <dimen name="footnote">10sp</dimen>
    <dimen name="h1">24sp</dimen>
    <dimen name="h2">20sp</dimen>
    <dimen name="h3">16sp</dimen>
    <dimen name="h4">16sp</dimen>
    <dimen name="h5">14sp</dimen>
    <dimen name="h6">12sp</dimen>
    <dimen name="label">14sp</dimen>
    <dimen name="radius_l">16dp</dimen>
    <dimen name="radius_m">8dp</dimen>
    <dimen name="radius_s">4dp</dimen>
    <dimen name="radius_xs">2dp</dimen>
    <dimen name="radius_zero">0dp</dimen>
    <dimen name="spacing_2xl">48dp</dimen>
    <dimen name="spacing_3xl">64dp</dimen>
    <dimen name="spacing_4xl">72dp</dimen>
    <dimen name="spacing_l">24dp</dimen>
    <dimen name="spacing_m">16dp</dimen>
    <dimen name="spacing_s">12dp</dimen>
    <dimen name="spacing_xl">32dp</dimen>
    <dimen name="spacing_xs">8dp</dimen>
    <dimen name="spacing_xxs">4dp</dimen>
    <dimen name="spacing_zero">0dp</dimen>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/windowsBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/windowsBackground</item>
        <item name="textButton">@style/Widget.AppComponents.Button.Text</item>
        <item name="outlineButton">@style/Widget.AppComponents.Button.Outline</item>
        <item name="filledButton">@style/Widget.AppComponents.Button.Filled</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">false</item>
    </style>
    <style name="BottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rect_white_24dp</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>
    <style name="BottomSheetComponent" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetBackground</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorError">@color/error</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="TextAppearance.Components.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/body</item>
    </style>
    <style name="TextAppearance.Components.Caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/caption</item>
    </style>
    <style name="TextAppearance.Components.Footnote" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/footnote</item>
    </style>
    <style name="TextAppearance.Components.H1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/h1</item>
    </style>
    <style name="TextAppearance.Components.H2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/h2</item>
    </style>
    <style name="TextAppearance.Components.H3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/h3</item>
    </style>
    <style name="TextAppearance.Components.H4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/h4</item>
    </style>
    <style name="TextAppearance.Components.H5" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/h5</item>
    </style>
    <style name="TextAppearance.Components.H6" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/h6</item>
    </style>
    <style name="TextAppearance.Components.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/label</item>
    </style>
    <style name="Widget.AppComponents.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="iconTint">@color/textWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="Widget.AppComponents.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/textDarkBlue</item>
        <item name="strokeColor">@color/textDarkBlue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="Widget.AppComponents.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/footnote</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="Widget.AppComponents.CardView.LargeRadius" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_l</item>
    </style>
    <style name="Widget.AppComponents.CardView.MediumRadius" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_m</item>
    </style>
    <style name="Widget.AppComponents.CardView.SmallRadius" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_s</item>
    </style>
    <style name="Widget.AppComponents.CardView.ZeroRadius" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_zero</item>
    </style>
    <style name="Widget.AppComponents.EditText.ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/caption</item>
    </style>
    <style name="Widget.AppComponents.EditText.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_m</item>

        <item name="hintTextAppearance">@style/Widget.AppComponents.EditText.HintTextAppearance
        </item>
        <item name="errorTextAppearance">@style/Widget.AppComponents.EditText.ErrorTextAppearance
        </item>
        <item name="counterTextAppearance">@style/Widget.AppComponents.EditText.HintTextAppearance
        </item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorError">@color/error</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/grey</item>
    </style>
    <style name="Widget.AppComponents.EditText.FilledBox.DropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_m</item>

        <item name="hintTextAppearance">@style/Widget.AppComponents.EditText.HintTextAppearance
        </item>
        <item name="errorTextAppearance">@style/Widget.AppComponents.EditText.ErrorTextAppearance
        </item>
        <item name="counterTextAppearance">@style/Widget.AppComponents.EditText.HintTextAppearance
        </item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorError">@color/error</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/grey</item>
    </style>
    <style name="Widget.AppComponents.EditText.HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/caption</item>
    </style>
    <style name="Widget.AppComponents.EditText.ProgressColor" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="Widget.BottomNavigationView.ActiveButton" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Widget.BottomNavigationView.InactiveButton" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">10sp</item>
    </style>
    <declare-styleable name="ButtonComponent">
        <attr name="android:text"/>
        <attr name="buttonType">
            <flag name="fill" value="0"/>
            <flag name="outline" value="1"/>
            <flag name="text" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="DropDownComponent">
        <attr name="android:text"/>
        <attr name="android:hint"/>
        <attr name="android:drawableStart"/>
    </declare-styleable>
    <declare-styleable name="EditTextComponent">
        <attr name="android:text"/>
        <attr name="android:hint"/>
        <attr name="android:enabled"/>
        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="android:lines"/>
        <attr name="android:drawableStart"/>
        <attr format="flags" name="textType">
            <flag name="date" value="0"/>
            <flag name="password" value="1"/>
            <flag name="currency" value="2"/>
            <flag name="search" value="3"/>
            <flag name="phone" value="4"/>
            <flag name="copy" value="5"/>
            <flag name="gold" value="6"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="ToolbarComponent">
        <attr name="android:text"/>
        <attr name="android:background"/>
        <attr name="android:icon"/>
        <attr name="toolbarType">
            <flag name="back" value="0"/>
            <flag name="simple" value="1"/>
            <flag name="close" value="2"/>
            <flag name="icon" value="3"/>
        </attr>
    </declare-styleable>
</resources>